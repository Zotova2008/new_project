{
  "name": "project",
  "version": "1.0.0",
  "description": "Сборка проекта",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "latest",
    "autoprefixer": "latest",
    "browser-sync": "latest",
    "del": "latest",
    "gulp": "4.0.x",
    "gulp-concat": "latest",
    "gulp-csso": "latest",
    "gulp-imagemin": "latest",
    "gulp-less": "latest",
    "gulp-plumber": "latest",
    "gulp-postcss": "latest",
    "gulp-posthtml": "latest",
    "gulp-rename": "latest",
    "gulp-sourcemaps": "latest",
    "gulp-svgstore": "latest",
    "gulp-uglify": "latest",
    "gulp-webp": "latest",
    "stylelint": "latest",
    "stylelint-config-htmlacademy": "latest"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/less/**/*.less\" --syntax less",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp build",
    "start": "gulp start"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.less"
  ],
  "engines": {
    "node": "8.16"
  }
}
